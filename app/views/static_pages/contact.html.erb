<% provide(:title, "Contact") %>

<div class="container">
	<div class="col-sm-12">
		<p class="contactHead" align="center"> Get in touch </p>
	</div>
</div>

<br><br>
<hr width="50%">

<div class="container" align="center">
	<div class="col-sm-12">
		<p class="intro" align="center"> seppjooo@gmail.com </p>
	</div>
	<div class="col-sm-3"> </div>
	<div class="col-sm-6">
		<a href="https://www.facebook.com/seppjooo"> <i class="fa fa-facebook fa-4x" aria-hidden="true"> </i></a> 
		<a href="https://twitter.com/seppjooo"> <i class="fa fa-twitter fa-4x" aria-hidden="true"></i> </a>
		<a href="https://instagram.com/seppjooo"> <i class="fa fa-instagram fa-4x" aria-hidden="true"> </i> </a> 
	</div>
	<div class="col-sm-3"> </div>
</div>

<br><br><br><br><br>
<div class="row">
	<div class="col-sm-12" >
		<form class="form-horizontal" role="form">
			<div class="modal-body col-sm-5">
				<div class="form-group">
					<label for="contact-name" class="col-sm-3 control-label">Name</label>
					<div class="col-sm-9">
						<input type="text" class="form-control" id="contact-name" placeholder="First & Last Name">
					</div>
				</div>
				<div class="form-group">
					<label for="contact-email" class="col-sm-3 control-label">E-mail</label>
					<div class="col-sm-9">
						<input type="email" class="form-control" id="contact-email" placeholder="Email address">
					</div>
				</div>
			</div>
			<div class="modal-body col-sm-7">
				<div class="form-group">
					<label for="contact-message" class="col-sm-2 control-label">Message</label>
					<div class="col-sm-10">
						<textarea class="form-control" rows="6" cols="50"> </textarea>
					</div>
				</div>
			</div>
			<div class="modal-footer"> 
				<button type="submit" class="btn btn-default">Send</button>
			</div>
		</form>
	</div>
</div>